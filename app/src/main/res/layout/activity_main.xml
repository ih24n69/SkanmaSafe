<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_gradient">

    <!-- Logo Sekolah -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo_smk5"
        android:layout_marginBottom="16dp" />

    <!-- Teks Sambutan -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang di\nSMK Negeri 5 Sukoharjo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

	<Button
		android:layout_marginTop="60dp"
		android:id="@+id/btnMulaiUjian"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/rounded_button"
		android:textColor="#FFFFFF"
		android:text="Mulai Ujian" 
		android:layout_marginBottom="12dp"/>
	
	<Button
		android:id="@+id/btnInputLink"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/rounded_button"
		android:textColor="#FFFFFF"
		android:text="Masukkan Tautan" 
		android:layout_marginBottom="12dp"/>

	<Button
		android:id="@+id/btnPeraturan"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/rounded_button"
		android:textColor="#FFFFFF"
		android:text="Peraturan Ujian" 
		android:layout_marginBottom="12dp"/>

	<Button
		android:id="@+id/btnAbout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/rounded_button"
		android:textColor="#FFFFFF"
		android:text="Tentang Aplikasi" 
		android:layout_marginBottom="12dp"/>
</LinearLayout>
